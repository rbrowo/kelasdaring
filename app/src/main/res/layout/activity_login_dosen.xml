<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".dosen.LoginDosen">

    <Button
        android:id="@+id/btnHome"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:drawableLeft="@drawable/ic_home"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/tvLoginArea"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="150dp"
        android:text="welcome!"
        android:textColor="#36175e"
        android:textSize="50dp"
        android:textAlignment="center"
        android:fontFamily="@font/gumbo"/>

    <TextView
        android:id="@+id/tvTxtLogin"
        android:layout_below="@id/tvLoginArea"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Dosen Area"
        android:textColor="#36175e"
        android:textSize="40dp"
        android:textAlignment="center"
        android:fontFamily="@font/kabouter"/>

    <EditText
        android:id="@+id/etID"
        android:layout_below="@id/tvTxtLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styleshape"
        android:hint="Dosen ID"
        android:textColor="#36175e"
        android:textColorHint="#36175e"
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_below="@id/etID"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styleshape"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#36175e"
        android:textColorHint="#36175e"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_below="@id/etPassword"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stylebutton"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="25dp"
        android:fontFamily="@font/jobless"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_below="@id/btnLogin"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Buat Akun Baru"
        android:drawableRight="@drawable/ic_row_right_purple_24dp"
        android:drawablePadding="-10dp"
        android:textColor="#36175e"
        android:textSize="25dp"
        android:fontFamily="@font/kabouter"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>