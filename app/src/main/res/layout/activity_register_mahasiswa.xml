<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_register"
    tools:context=".mahasiswa.RegisterMahasiswa">

    <TextView
        android:id="@+id/tvMhs"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="7dp"
        android:text="Mahasiswa"
        android:textColor="#36175e"
        android:textSize="40dp"
        android:textAlignment="center"
        android:fontFamily="@font/gumbo"/>

    <TextView
        android:id="@+id/tvDaftar"
        android:layout_below="@id/tvMhs"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create an Account"
        android:textColor="#36175e"
        android:textSize="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/kabouter"/>

    <EditText
        android:id="@+id/etNIM"
        android:layout_below="@id/tvDaftar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styleshape"
        android:hint="NIM"
        android:textColor="#36175e"
        android:textColorHint="#36175e"
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etNama"
        android:layout_below="@id/etNIM"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styleshape"
        android:hint="Nama"
        android:textColor="#36175e"
        android:textColorHint="#36175e"
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"/>

    <EditText
        android:id="@+id/etJK"
        android:layout_below="@id/etNama"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styleshape"
        android:hint="Jenis Kelamin"
        android:textColor="#36175e"
        android:textColorHint="#36175e"
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_below="@id/etJK"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styleshape"
        android:hint="Email"
        android:textColor="#36175e"
        android:textColorHint="#36175e"
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_below="@id/etEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styleshape"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#36175e"
        android:textColorHint="#36175e"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_below="@id/etPassword"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stylebutton"
        android:text="REGISTER"
        android:textColor="#fff"
        android:textSize="25dp"
        android:fontFamily="@font/jobless"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_below="@id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="130dp"
        android:text="Back to Login"
        android:drawableLeft="@drawable/ic_row_left_purple_24dp"
        android:drawablePadding="-50dp"
        android:textColor="#36175e"
        android:textSize="25dp"
        android:fontFamily="@font/kabouter"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>