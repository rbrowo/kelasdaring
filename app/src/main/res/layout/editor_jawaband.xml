<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e8d1ac"
    tools:context=".tanyajawab.DaftarTanyaD">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:text="Tanya Jawab Dosen"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#36175e"
                android:fontFamily="@font/gumbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/subjek"
                    android:hint="Subjek"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#36175e"
                    android:inputType="textPersonName|textCapWords"
                    android:editable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/styleshape"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/mhs"
                    android:hint="Nama Mahasiswa"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#36175e"
                    android:inputType="textPersonName|textCapWords"
                    android:editable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/styleshape"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/dosen"
                    android:hint="Nama Dosen"
                    android:fontFamily="@font/montserrat"
                    android:editable="false"
                    android:textColor="#36175e"
                    android:inputType="textPersonName|textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/styleshape"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/matkul"
                    android:hint="Nama Matkul"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#36175e"
                    android:scrollbars="horizontal"
                    android:inputType="textPersonName|textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:background="@drawable/styleshape"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/tanya"
                    android:hint="Pertanyaan"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#36175e"
                    android:layout_below="@id/title"
                    android:inputType="textMultiLine"
                    android:editable="false"
                    android:minLines="2"
                    android:gravity="top|start"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:background="@drawable/styleshape"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etJawab"
                    android:hint="Jawaban"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#36175e"
                    android:layout_below="@id/title"
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:gravity="top|start"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:background="@drawable/styleshape"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvNama"
                android:layout_below="@+id/btnProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Nama Dosen"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_below="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="yourmail@mail.com"
                android:visibility="invisible"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>