<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/row_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@drawable/stylelist">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/picture"
        android:src="@drawable/dosen_icon"
        android:layout_height="55dp"
        android:layout_width="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:weightSum="2"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/name"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/picture"
            android:layout_marginTop="10dp"
            android:text="Nama Dosen"
            android:fontFamily="@font/jobless"
            android:textColor="#36175e"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/layoutName"
        android:background="#d4d4d4"
        android:layout_alignLeft="@+id/layoutName" />

    <LinearLayout
        android:id="@+id/LayoutType"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layoutName"
        android:layout_alignStart="@+id/layoutName"
        android:layout_below="@+id/layoutName"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:text="Detail Mahasiswa"
        android:textSize="15sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/id_dosen"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="222"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textColor="#36175e"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="yourmail@mail.com"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textColor="#36175e"/>

    </LinearLayout>

</RelativeLayout>